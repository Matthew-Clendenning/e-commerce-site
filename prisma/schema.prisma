generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String           @id @default(cuid())
  email          String           @unique
  name           String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  cart           CartItem[]
  orders         Order[]
  favorites      Favorite[]
  recentlyViewed RecentlyViewed[]
}

model Category {
  id          String         @id @default(cuid())
  name        String         @unique
  slug        String         @unique
  description String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  products    Product[]
  sales       SaleCategory[]
}

model Product {
  id              String           @id @default(cuid())
  name            String
  slug            String           @unique
  description     String?
  price           Decimal          @db.Decimal(10, 2)
  imageUrl        String?
  stock           Int              @default(0)
  discountPercent Int?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  categoryId      String
  cartItems       CartItem[]
  orderItems      OrderItem[]
  category        Category         @relation(fields: [categoryId], references: [id])
  favorites       Favorite[]
  recentlyViewed  RecentlyViewed[]
  images          ProductImage[]

  @@index([categoryId])
  @@index([slug])
}

model ProductImage {
  id        String   @id @default(cuid())
  url       String
  alt       String?
  position  Int      @default(0)
  productId String
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([productId, position])
}

model Order {
  id                  String          @id @default(cuid())
  status              OrderStatus     @default(PENDING)
  total               Decimal         @db.Decimal(10, 2)
  userId              String?
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  customerEmail       String
  customerName        String?
  stripePaymentIntent String?         @unique
  stripeSessionId     String?         @unique
  shippingAddress     Json?
  guestToken          String?         @unique @default(cuid())
  isGuest             Boolean         @default(false)
  trackingNumber      String?
  shippingCarrier     ShippingCarrier?
  shippedAt           DateTime?
  deliveredAt         DateTime?
  user                User?           @relation(fields: [userId], references: [id], onDelete: Cascade)
  items               OrderItem[]

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([customerEmail])
  @@index([guestToken])
  @@index([trackingNumber])
}

model OrderItem {
  id        String   @id @default(cuid())
  quantity  Int
  price     Decimal  @db.Decimal(10, 2)
  orderId   String
  productId String
  createdAt DateTime @default(now())
  imageUrl  String?
  name      String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}

model CartItem {
  id        String   @id @default(cuid())
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum ShippingCarrier {
  USPS
  UPS
  FEDEX
  DHL
  OTHER
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  productId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
}

model RecentlyViewed {
  id        String   @id @default(cuid())
  userId    String
  productId String
  viewedAt  DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@index([userId, viewedAt])
  @@index([productId])
}

model Sale {
  id         String         @id @default(cuid())
  name       String
  tagline    String
  discount   Int
  startDate  DateTime       @default(now())
  endDate    DateTime
  isActive   Boolean        @default(true)
  bannerUrl  String?
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  categories SaleCategory[]

  @@index([isActive, endDate])
}

model SaleCategory {
  id         String   @id @default(cuid())
  saleId     String
  categoryId String
  sale       Sale     @relation(fields: [saleId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([saleId, categoryId])
  @@index([saleId])
  @@index([categoryId])
}
